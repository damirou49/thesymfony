                              </div>
                           </div>
                        </div>
                        <div class="flex-col">
                           <div class="hg-form-component-input form-group">
                              <label for="reservation-enddate">À</label>
                              <div class='input-group'>
                                 <input type='text' class="form-control" name="city-arrival" placeholder="Airport" />
                              </div>
                           </div>
                        </div>
                        <div class="flex-col">
                           <div class="hg-form-component-input">
                              <label for="reservation-people">Passagers</label>
                              <select id="reservation-people" name="passengers">
                                 <option value="1">1</option>
                                 <option value="2">2</option>
                                 <option value="3">3</option>
                                 <option value="4">4</option>
                              </select>
                           </div>
                        </div>
                        <!--Coloana submit -->
                        <div class="flex-col flex-col-end">
                           <div class="hg-form-component">
                              <button class="hb_btn btn-gradient" type="submit"> 
                                 Rechercher
                              </button>
                           </div>
                        </div>
                     </div>
                  </form>
               </div>
