                     <div>
                        <!--Coloana adults  -->
                        <div class="flex-col">
                           <div class="hg-form-component-input form-group col-md-6">
                              <label>Aller</label>
                              <div class='input-group'>
                                 <input type='text' class="form-control" name="date-departure" value placeholder="Date de départ"/>
                              </div>
                           </div>
